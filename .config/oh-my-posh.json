{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": false,
    "pwd": "{{ if eq .OS \"windows\" }}osc99{{ else }}osc7{{ end }}",
    "shell_integration": true,
    "disable_cursor_positioning": false,
    "patch_pwsh_bleed": true,
    "disable_notice": true,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "status",
                    "style": "diamond",
                    "leading_diamond": "",
                    "trailing_diamond": " ",
                    "background": "red",
                    "foreground": "black",
                    "template" : "<b>!</b>"
                },
                {
                    "type": "executiontime",
                    "style": "diamond",
                    "leading_diamond": "",
                    "trailing_diamond": " ",
                    "background": "yellow",
                    "foreground": "black",
                    "properties": {
                        "threshold": 60000,
                        "style": "round"
                    },
                    "template" : "<b>{{ nospace .FormattedMs }}</b>"
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "leading_diamond": "",
                    "trailing_diamond": " ",
                    "background": "magenta",
                    "foreground": "black",
                    "properties": {
                        "branch_icon": " "
                    },
                    "template": "{{ .HEAD }}"
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "leading_diamond": "",
                    "trailing_diamond": " ",
                    "background": "lightWhite",
                    "foreground": "black",
                    "properties": {
                        "style": "full"
                    },
                    "template": "{{ if .Segments.Git.Dir }}{{ .Path | replace (osDir .Segments.Git.Dir) \"…\" }}{{ else }}{{ .Path }}{{ end }}"
                }
            ]
        }
    ],
    "secondary_prompt": {
        "background": "transparent",
        "foreground": "lightWhite",
        "template": " "
    }
}
